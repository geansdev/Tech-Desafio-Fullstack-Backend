// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  name          String   @unique
  email         String   @unique
  password      String
  phone         String   @unique
  date_register DateTime @default(now())

  contactUsers ContactUser[]

  @@map("users")
}

model ContactUser {
  id            String   @id
  name          String
  phone         String
  date_register DateTime @default(now())
  userId        String

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("contactUsers")
}
